# Production Environment Variables
# Copy this to .env and fill in your actual values

# Database Configuration (Remote PostgreSQL)
DATABASE_URL=postgresql://username:password@your-db-server-ip:5432/database_name

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here-change-this

# Server Configuration
NODE_ENV=production
PORT=3000  # Change this to your preferred port

# Optional: Reverse Proxy Configuration (if using nginx)
TRUST_PROXY=true

# Note: After running npm run deploy, a .pandanet-config file will be created
# containing your deployment directory and other settings for future updates. 